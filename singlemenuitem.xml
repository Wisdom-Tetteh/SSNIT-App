<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.tetteh1568.breadblog.MenuActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/foodImage"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:background="@drawable/bb1"
                />

            <TextView
                android:id="@+id/foodName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/foodImage"
                android:text="Butter Bread"
                android:textColor="#000000"
                android:textSize="30dp"

                />

            <TextView
                android:id="@+id/foodDesc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodName"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/foodImage"
                android:text="Tasty VVU Butter Bread"

                />

            <TextView
                android:id="@+id/foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/foodDesc"
                android:layout_below="@+id/foodDesc"
                android:text="GHS5"
                android:textColor="#4CAF50"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
